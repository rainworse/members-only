extends layout

block content
  div.create-new-post-form
  form(method='POST' action='/new-post')
    div.create-new-post-fields
      label(for='title') Title:
      input#title.form-control(type='text' placeholder='title' required='true' name='title' value=(undefined===post ? '' : post.title))
      label(for='text') Text:
      textarea#text.form-control(type='text' required='true' name='text' value=(undefined===post ? '' : post.text))
    button.btn.btn-primary(type='submit') Post
  if errors 
    ul 
      for error in errors 
        li!= error.msg
